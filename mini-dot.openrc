description="fpnd - FreePN network daemon"
command="/usr/bin/forwarder.py"
command_args="${START_OPTS}"
pidfile="/run/${RC_SVCNAME}.pid"


depend() {
	provide dns
	need localmount net
}

stop_pre() {
	[ "${RC_CMD}" = "restart" ] && sleep 1
	return 0
}
